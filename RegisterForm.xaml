<Window x:Class="WTFpa.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WTFpa"
        mc:Ignorable="d"
        Title="RegisterForm" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush Color="#2E2E2E"/>
    </Window.Background>
    <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Имя -->
            <RowDefinition Height="Auto"/>
            <!-- Фамилия -->
            <RowDefinition Height="Auto"/>
            <!-- Login -->
            <RowDefinition Height="Auto"/>
            <!-- Пароль -->
            <RowDefinition Height="Auto"/>
            <!-- Регистрация -->
            <RowDefinition Height="Auto"/>
            <!-- Назад -->
        </Grid.RowDefinitions>

        <!-- Регистрация -->
        <TextBlock Text="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="White" Grid.Row="0" Margin="0,10"/>

        <!-- Имя -->
        <TextBox x:Name="UserNameField" HorizontalAlignment="Center" Height="45" Margin="0,8" Width="350"
                 Background="#1E1E1E" BorderBrush="Transparent" BorderThickness="0" Padding="12,8" FontSize="16" Foreground="#B0B0B0" FontWeight="Normal"
                 Grid.Row="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

        <!-- Фамилия -->
        <TextBox x:Name="UserSurnameField" HorizontalAlignment="Center" Height="45" Margin="0,8" Width="350"
                 Background="#1E1E1E" BorderBrush="Transparent" BorderThickness="0" Padding="12,8" FontSize="16" Foreground="#B0B0B0" FontWeight="Normal"
                 Grid.Row="2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Text=""/>

        <!-- Логин -->
        <TextBox x:Name="LoginField" HorizontalAlignment="Center" Height="45" Margin="0,8" Width="350"
                 Background="#1E1E1E" BorderBrush="Transparent" BorderThickness="0" Padding="12,8" FontSize="16" Foreground="#B0B0B0" FontWeight="Normal"
                 Grid.Row="3" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

        <!-- Пароль -->
        <PasswordBox x:Name="passwordFieldf" HorizontalAlignment="Center" Height="45" Margin="0,8" Width="350"
                     Background="#1E1E1E" BorderBrush="Transparent" BorderThickness="0" Padding="12,8" FontSize="16" Foreground="#B0B0B0" FontWeight="Normal"
                     Grid.Row="4" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>

        <!-- Создать аккаунт -->
        <Button x:Name="buttonRegister" Content="Создать аккаунт" HorizontalAlignment="Center" Height="45" Margin="0,10" VerticalAlignment="Top" Width="200"
                Background="#34EBE7" BorderBrush="Transparent" BorderThickness="0" Foreground="#003366" FontSize="16" FontWeight="Bold"
                Grid.Row="5" Click="buttonRegister_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="1" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <!-- Кнопка "Назад" -->
        <Button x:Name="AutLabel" Content="Назад" HorizontalAlignment="Center" Height="30" Margin="0,5" VerticalAlignment="Bottom" Width="150"
                Background="Transparent" BorderBrush="Transparent" Foreground="#34EBE7" FontSize="14" FontWeight="Bold"
                Grid.Row="6" Click="AutLabel_Click"/>
        <TextBlock HorizontalAlignment="Left" Foreground="White" Height="45" Margin="-111,8,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="88" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Height="45" Margin="-174,8.2,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Фамилия" Foreground="White" VerticalAlignment="Top" Width="151" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Foreground="White" Height="56" Margin="-129,8.4,0,0" Grid.Row="3" Grid.RowSpan="2" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Width="106" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" Height="45" Foreground="White" Margin="-147,7.6,0,0" Grid.Row="4" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="124" FontSize="36"/>
    </Grid>

</Window>
