<Window x:Class="WTFpa.LoginWorm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WTFpa"
        mc:Ignorable="d"
        Title="LoginWorm" Height="450" Width="800" GotFocus="Window_GotFocus">
    <Window.Background>
        <SolidColorBrush Color="#2E2E2E"/>
    </Window.Background>
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Вход -->
        <TextBlock Text="Вход" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Foreground="White" Grid.Row="0" Margin="0,10"/>

        <!-- Логин -->
        <TextBox x:Name="loginField" HorizontalAlignment="Center" Height="50" Margin="0,10,0,10" Width="350"
                 Background="#1E1E1E" BorderBrush="Transparent" BorderThickness="0" Padding="15,10" FontSize="16" Foreground="#B0B0B0" FontWeight="Normal"
                 Grid.Row="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" MouseLeftButtonUp="loginField_MouseLeftButtonUp" TextInput="loginField_TextInput" GotFocus="loginField_GotFocus"/>

        <!-- Пароль -->
        <PasswordBox x:Name="passwordFieldf" HorizontalAlignment="Center" Height="50" Margin="0,10,0,20" Width="350"
                     Background="#1E1E1E" BorderBrush="Transparent" BorderThickness="0" Padding="15,10" FontSize="16" Foreground="#B0B0B0" FontWeight="Normal"
                     Grid.Row="2" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Password=""/>

        <!-- Войти -->
        <Button x:Name="buttonLogin" Content="Войти" HorizontalAlignment="Center" Height="50" Margin="0,40,0,20" Width="200"
                Background="#34EBE7" BorderBrush="Transparent" BorderThickness="0" Foreground="#003366" FontSize="16" FontWeight="Bold" 
                Grid.Row="3" Click="buttonLogin_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- У меня нет аккаунта -->
        <Button x:Name="RegisterLabel" Content="У меня нет аккаунта" HorizontalAlignment="Center" Height="30" Width="200"
                Background="Transparent" BorderBrush="Transparent" Foreground="#34EBE7" FontSize="14" FontWeight="Bold" 
                Grid.Row="4" Click="RegisterLabel_Click_1"/>
        <TextBlock HorizontalAlignment="Left" Foreground="White" Margin="-154,51,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" Height="61" Width="108" FontSize="36" Grid.RowSpan="2" TextDecorations="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Height="51" Margin="-154,9.4,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Пароль" Foreground="White" VerticalAlignment="Top" Width="129" FontSize="36"/>
    </Grid>
</Window>
